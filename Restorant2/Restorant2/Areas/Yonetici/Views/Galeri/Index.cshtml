@model IEnumerable<Restorant2.Models.Galeri>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p>
    <a asp-action="Create" class="btn btn-primary">Galeri Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Resim
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>



@foreach (var item in Model) {
        <tr>
            <td>
                    @if (item.Image == null)
                    {
                        <img src="~/website/images/no image.png" width="80px" height="60px" />
                    }
                    else
                    {
                        <img src="@item.Image" width="80" height="60" />
                    }
            </td>
            <td>
               
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"> <i class="bi bi-trash-fill"></i> Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
