@model IEnumerable<Restorant2.Models.Iletisim>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 


<p>
    <a asp-action="Create" class="btn btn-primary">Yeni oluştur</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Adı
            </th>
            <th>
               Email
            </th>
            <th>
                Telefon
            </th>
            <th>
             Mesaj
            </th>
            <th>
              Tarih
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mesaj)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tarih)
            </td>
            <td>
               
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" >Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
