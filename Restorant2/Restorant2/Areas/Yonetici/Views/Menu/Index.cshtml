@model IEnumerable<Restorant2.Models.Menu>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <p>
        <a asp-action="Create" class="btn btn-primary">Menü Ekle</a>
    </p>
    <table class="table table-bordered table-striped" id="myTable">
        <thead>
            <tr>
                <th>
                  Resim
                </th>
                <th>
                   Başlık
                </th>
                <th>
                    Fiyat
                </th>
                <th>
                Özel Menü
                </th>
                <th>
                    Kategori
                </th>
                <th>
                   
                </th>
               
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (item.Image == null)
                        {
                            <img src="~/website/images/no image.png"  width="80px" height="60px"/>
                        }
                        else
                        {
                            <img src="@item.Image" width="80" height="60" />
                        }
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>


                    <td>
                        @if (item.OzelMenu)
                        {
                            <button class="btn btn-success" bt-sm><i class="bi bi-check-circle-fill"></i> Evet</button>
                        }
                        
                        else 
                        {
                            <button class="btn btn-danger" bt-sm><i class="bi bi-x-circle-fill"></i> hayır</button>
                        }
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Categories.Name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark"> <i class="bi bi-pencil-fill"></i> Düzenle</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i> Sil </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
                }

            });
        });

    </script>
}
